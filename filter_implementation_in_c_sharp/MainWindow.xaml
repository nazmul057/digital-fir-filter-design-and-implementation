<Window x:Class="DigitalFirFilterDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:DigitalFirFilterDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <TextBlock Text="Digital Filter Input Output Plot" Margin="20 10 10 10"></TextBlock>
        <oxy:PlotView Width="700" Height="250" Model="{Binding PlotModelInputSignal}" />
        <oxy:PlotView Width="700" Height="250" Model="{Binding PlotModelOutputSignal}" Margin="0 20 0 0"/>
    </StackPanel>
</Window>
